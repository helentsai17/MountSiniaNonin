<Page x:ConnectionId='1'
    x:Class="Mount_Sinai_Nonin_device.DataDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mount_Sinai_Nonin_device"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' Grid.Column="2" x:Name="checkstatus" TextWrapping="Wrap"/>
        <Button x:ConnectionId='3' x:Name="ConnectButton" Content="Connect"                                      Margin="0,10,0,0"/>
        <ComboBox x:ConnectionId='4' Grid.Row="1" Grid.Column="2" x:Name="ServiceList" Margin="0,10,0,0" PlaceholderText="Choose a service" Visibility="Collapsed"
                                                                              />
        <ComboBox x:ConnectionId='5' Grid.Row="1" Grid.Column="2" x:Name="CharacteristicList" Margin="0,10,0,0" PlaceholderText="Choose a characteristic" Visibility="Collapsed"
                                                                                 />
        
        <TextBlock x:ConnectionId='6' Grid.Column="1" x:Name="SelectedDeviceRun" Text="Device Name"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Hart Rate" FontSize="30" TextWrapping="Wrap"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock x:ConnectionId='9' x:Name="HeartReteDataDisply" FontSize="80"  TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='10' x:Name="CharacteristicLatestValue" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="SPO2" FontSize="30" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="98" FontSize="80" />

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
            <Button x:ConnectionId='7' x:Name="CharacteristicReadButton" Content="Read Value"                                                
                        Visibility="Collapsed" Margin="0,10,10,0"/>
            <Button x:ConnectionId='8' x:Name="ValueChangedSubscribeToggle" Content="Subscribe to value changes"                                                   
                        Visibility="Collapsed" Margin="0,10,10,0"/>
        </StackPanel>
       
    </Grid>
</Page>

